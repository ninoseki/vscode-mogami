{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"lib": [
			"ESNext"
		],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"rootDirs": [
			"src"
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		},
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	],
}
